<h1> angular webseed </h1>

<div ng-app="Weekly">
  <div ng-controller="WebSeedCtrl">

    <form ng-submit="addWebSeed()">
      <input type="text" ng-model="newWebSeed.url" >
      <input type="submit" value="add">
    </form>

    <ul>
      <li ng-repeat="web_seed in web_seeds">
        <button ng-click="vote(web_seed)">
          {{web_seed.votes}}
        </button>
        {{web_seed.url}} 
        <a href="#/show/{{web_seed.id}}">show</a>
        <button ng-click="deleteWebSeed(web_seed)">Delete</button>
      </li>
    </ul>
  </div>
</div>